<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="assets/style/reset.css" rel="stylesheet" type="text/css" />
    <link href="assets/style/style.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>Document</title>
</head>
<body>
    <header>
        <div>
            <nav>

            <nav>
                <a class="buttonConnexion" >Connexion</a>
            </nav>
        </div>
        <article>
            <h1>Fifa Tournament</h1>
            <h2>Trouvez un tournoi près de chez vous</h2>
            <a href="/inscription">Créer un compte</a>
            <a href="/tournament">Accès aux tournois</a>
        </article>
    </header>

    <script type="text/javascript">
        let buttonConnexion = document.querySelector(".buttonConnexion")
        buttonConnexion.addEventListener("click" ,function(){
             Swal.fire({
                title: '<h1 style="color : black; font-size : 30px ">Connexion</h1>',
                html:
                    '<form method="POST"><input type="text" name="mail" class="input" placeholder="Email de connexion"> <input type="password" placeholder="Mot de passe" name="password" class="input"><input type="submit" value="Se connecter" class="connexion"></form> ',
                showCloseButton: true,
                showCancelButton: false,
                focusConfirm: false,           
                showConfirmButton: false,   
            }) 
        })


    </script>

    {% block content %}{% endblock %}

</body>
</html>