<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="assets/style/reset.css" rel="stylesheet" type="text/css" />
    <link href="assets/style/accueil.css" rel="stylesheet" type="text/css" />
    <link rel='stylesheet' type='text/css' media='screen' href='assets/style/swipe.css'>
    <title>Document</title>
</head>
<body>


    <h1>Hello</h1>
    <a href="/admin">Admin</a>



    <form method="post" action="" enctype='multipart/form-data'>
        <input type="text" name="nom" placeholder="Insert Name">
        <textarea name="description" placeholder="Insert Description"></textarea>
        <input type="text" name="date" placeholder="Insert Date">
        <input type="text" name="place" placeholder="Insert place">
        <input type="file" name="image" accept="image/*">
        <input type="submit" name="createEvent" value="Event">
    </form>



   <table>
            <tr>
                <td>Title</td>
                <td>Bio</td>
                <td>Date</td>
                <td>Place</td>
                <td>Image</td>
                <td>DeleteButton</td>
            </tr>
        {% for event in events %}
            <tr>
                <td>{{ event.nom }}</td>
                <td>{{ event.description }}</td>
                <td>{{ event.date }}</td>
                <td>{{ event.place }}</td>
                <td><img src="http://localhost/images/{{ event.image }}" style="height: 100px"></td>
                <td>  
                    <form method="POST" action="/admin/createEvent/deleteEvent">
                        <input type="submit" name="{{event.id}}" value="Delete">
                    </form>
                </td>
            </tr>
        {% endfor %}
    </table>



</body>
</html>