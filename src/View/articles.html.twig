<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="assets/style/reset.css" rel="stylesheet" type="text/css" />
    <link href="assets/style/accueil.css" rel="stylesheet" type="text/css" />
    <link href="assets/style/article.css" rel="stylesheet" type="text/css" />
    <title>Document</title>
</head>
<body>
    <header>    
        <div>
            <img src="http://localhost/images/{{session.user.image1}}" alt="{{session.user.image1}}">
            <input type="checkbox" id="burger-checkbox">
            <label for="burger-checkbox">{{session.user.firstname}}.{{session.user.lastname}}</label>
            <div class="menu-wrapper">
                <nav>
                    <ul>
                        <li><a href="/">Accueil</a></li>
                        <li><a href="/profil">Mon Profil</a></li>
                        <li><a href="/article">Mes Articles</a></li>
                        <li><a href="/abonnement">Pass Premium</a></li>
                        <li><a href="/event">Evenement</a></li>
                        <li><div></div></li>
                        <li><a href="#">Reglage</a></li>
                        <li><a href="/deconnection">Déconnexion</a></li>
                    </ul>
                </nav>
            </div>
        </div>
       <img alt="Logo MiiLove" src="https://media.discordapp.net/attachments/951121617642205184/966374494497280000/unknown.png">
       <button>Messages</button> 
    </header>
    <div class="line" ></div>
    <div class="main">
        <div class="search">
            <div id="search_icon_background">
                <input class="searchbar" type="text" placeholder="Cherchez un sujet" />
                <button class="btnr">Recherche</button>
            </div>
            <div class="boutton">
                
                <button class="btnf">Filtre</button>
            </div>
        </div>
    <div class="content">

    <h1>Abonnement</h1>
    <section class="article" id="article">
    
    {% for article in articles %}
        <article>
            <h3>{{ article.title}}</h3>
        </article>

    {% endfor %}


    </section>

    <h1>Découvrir</h1>
    <section class="discover" id="discover">
    
    {% for article in articles %}
        <article>
            <h3>{{ article.title}}</h3>
        </article>

    {% endfor %}
    </div>


    {% block content %}{% endblock %}
    </div>
</body>
</html>
